<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/SFCActionBar</item>
    </style>

    <style name="SFCActionBar" parent="android:Widget.Holo.ActionBar.Solid">
        <item name="android:background">@color/blue_facebook</item>
        <item name="android:titleTextStyle">@style/SFCActionBarTitleColor</item>
    </style>

    <style name="SFCActionBarTitleColor" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
